generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model User {
  id        Int      @id @unique @default(autoincrement())
  name      String
  cpf       String   @unique
  email     String   @unique
  password  String
  telephone String
  address   String
  craetedAt DateTime @default(now())

  role   Role @relation(fields: [roleId], references: [id])
  roleId Int

  @@map("users")
}

model Role {
  id   Int    @id @unique @default(autoincrement())
  name String @unique

  User User[]

  @@map("roles")
}
